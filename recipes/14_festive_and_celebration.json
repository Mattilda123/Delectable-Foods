    {
      "id": "fes_002",
      "name": "Braised Sea Cucumber with Mushrooms",
      "difficulty": "Medium",
      "prep_time": "30 minutes (plus soaking time)",
      "cook_time": "90 minutes",
      "servings": 6.0,
      "description": "A luxurious Chinese banquet and festive dish in Singapore, featuring tender sea cucumber braised with shiitake mushrooms, dried scallops, and aromatics in a savory oyster sauce gravy. Served at celebrations and special occasions.",
      "ingredients": {
        "main": {
          "dried sea cucumber": "500g, soaked and cleaned",
          "dried shiitake mushrooms": "8, soaked and stems removed",
          "dried scallops (optional)": "6, soaked",
          "ginger": "4 slices",
          "garlic": "4 cloves, smashed",
          "spring onion": "2, cut into sections",
          "oyster sauce": "3 tbsp",
          "light soy sauce": "2 tbsp",
          "dark soy sauce": "1 tbsp",
          "rock sugar": "1 tbsp",
          "Shaoxing wine": "2 tbsp",
          "chicken stock": "1L",
          "cornstarch": "1 tbsp (mixed with 2 tbsp water)",
          "oil": "2 tbsp"
        }
      },
      "steps": [
        "Heat oil in a wok. Saut√© ginger, garlic, and spring onion until fragrant.",
        "Add mushrooms and dried scallops, stir-fry for 2 minutes. Add sea cucumber and toss gently.",
        "Add oyster sauce, soy sauces, rock sugar, Shaoxing wine, and chicken stock. Bring to a boil, then reduce heat and simmer gently for 60-90 minutes until sea cucumber is tender and flavors are absorbed.",
        "Thicken sauce with cornstarch slurry. Adjust seasoning to taste. Serve hot, garnished with spring onion."
      ],
      "tips": [
        "Soak and clean sea cucumber thoroughly before cooking.",
        "Use good quality dried mushrooms for best flavor.",
        "Can add abalone or fish maw for a more luxurious version."
      ],
